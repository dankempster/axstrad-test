{
    "name": "axstrad/test",
    "type": "component",
    "description": "Test component used by all Axstrad packages.",
    "keywords": [],
    "license": "MIT",
    "authors": [
        {
            "name": "Dan Kempster",
            "email": "dev@dankempster.co.uk",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.4"
    },

    "require-dev": {
        "phpunit/phpunit": "~4.1",
        "satooshi/php-coveralls": "dev-master"
    },

    "autoload": {
        "psr-4": {
            "Axstrad\\Component\\Test\\": ""
        }
    },

    "minimum-stability": "dev",
    "prefer-stable": true,

    "extra": {
        "branch-alias": {
            "dev-master": "0.1.x-dev",
            "dev-develop": "0.2.x-dev"
        }
    },

    "archive": {
        "exclude": [
            "!vendor",
            "phpunit.xml*",
            ".travis.yml"
        ]
    }
}
